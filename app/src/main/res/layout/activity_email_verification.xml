<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmailVerificationActivity"
    android:gravity="center"
    android:paddingStart="30sp"
    android:paddingEnd="30sp"
    android:orientation="vertical">

    <Button
        android:id="@+id/verificationButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Verify Your Email ID"
        android:textColor="#273238"
        android:background="@drawable/button_round"
        android:textAllCaps="false" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cBox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="#E3F6CD"
            android:text=" I agree with all terms and conditions" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20sp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10sp"
        android:textColor="#E3F6CD"
        android:text="Terms and Conditions: ">

    </TextView>
        <TextView
            android:id="@+id/terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/linktosite">

        </TextView>

    </LinearLayout>
    <Button
        android:id="@+id/explore"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:text="Let's Explore >>"
        android:visibility="invisible" />


</LinearLayout>